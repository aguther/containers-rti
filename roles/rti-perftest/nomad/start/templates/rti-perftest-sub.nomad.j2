job "rti-perftest-sub" {
  type = "service"

  region = "europe"
  datacenters = ["vagrant"]

  group "sub" {
    count = 1

    restart {
      attempts = 10
      interval = "5m"
      delay = "25s"
      mode = "delay"
    }

    task "sub" {
      driver = "docker"

      config {
        image = "guther/rti-perftest"
        args = [
          "-sub",
        ]
      }

      resources {
        cpu    = 500
        memory = 768
        network {
          mbits = 1000
        }
      }
    }
  }
}
